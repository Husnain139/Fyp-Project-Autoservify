<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOP IMAGE -->
        <ImageView
            android:id="@+id/Sp_pic"
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sparepic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/inventory_managed_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/baseline_inventory_24"
            android:background="@android:color/white"
            android:padding="2dp"
            android:visibility="gone"
            app:tint="#6750A4"
            app:layout_constraintStart_toStartOf="@id/Sp_pic"
            app:layout_constraintTop_toTopOf="@id/Sp_pic" />



        <!-- TITLE -->
        <TextView
            android:id="@+id/Sp_Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Change Brake Pads"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/Sp_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/Sp_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:text="Brake System"
            android:textSize="14sp"
            android:textColor="#808080"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/Sp_Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PRICE -->
        <TextView
            android:id="@+id/Sp_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="â‚¹__"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sp_desc" />

        <TextView
            android:id="@+id/stockStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Out of Stock"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/status_badge_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/Sp_Price"
            app:layout_constraintTop_toBottomOf="@id/sp_del" />

        <!-- EDIT TEXT -->
        <ImageView
            android:id="@+id/edit_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/baseline_edit_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- DELETE ICON -->
        <ImageView
            android:id="@+id/sp_del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="@id/edit_sp"
            app:layout_constraintEnd_toStartOf="@id/edit_sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFBFF"
    android:fillViewport="true"
    android:clipToPadding="false"
    tools:context=".ui.shopkeeper.ShopkeeperDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Welcome Section - Clean & Minimal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="vertical">

            <!-- Welcome Message -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome back,"
                android:textColor="#49454F"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <!-- Shopkeeper Name -->
            <TextView
                android:id="@+id/shopkeeper_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M Arslan Sarwar"
                android:textColor="#1C1B1F"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <!-- You have text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have"
                android:textColor="#49454F"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Statistics Grid - Clean Material 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="28dp"
            android:baselineAligned="false">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <!-- Today's Sales Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_attach_money_24"
                            android:layout_marginBottom="8dp"
                            app:tint="#6750A4" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/sales_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="sans-serif"
                            android:text="4"
                            android:textColor="#1C1B1F"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales Amount"
                            android:textColor="#49454F"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Appointments Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_event_24"
                            android:layout_marginBottom="8dp"
                            app:tint="#6750A4" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/appointments_pending_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="#1C1B1F"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="6dp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointments"
                            android:textColor="#49454F"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <!-- Orders Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_shopping_cart_24"
                            android:layout_marginBottom="8dp"
                            app:tint="#6750A4" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/orders_pending_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="#1C1B1F"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="6dp" />

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orders"
                            android:textColor="#49454F"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Reviews Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_star_24"
                            android:layout_marginBottom="8dp"
                            app:tint="#6750A4" />

                        <!-- Number -->
                        <TextView
                            android:id="@+id/average_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="#1C1B1F"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="6dp" />

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reviews"
                            android:textColor="#49454F"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- Shop Info Card - Clean Design -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Shop Image Circle -->
                <ImageView
                    android:id="@+id/shop_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Shop Image"
                    android:padding="14dp"
                    android:src="@drawable/baseline_store_24"
                    app:tint="#6750A4" />

                <!-- Shop Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shop_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Auto Shop"
                        android:textColor="#1C1B1F"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/shop_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Lahore, Pakistan"
                        android:textColor="#49454F"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_shop_button"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="80dp"
                    android:text="Edit"
                    android:textSize="14sp"
                    android:textColor="#6750A4"
                    android:fontFamily="sans-serif"
                    app:strokeColor="#6750A4"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Orders Section -->
        <LinearLayout
            android:id="@+id/recent_orders_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Orders"
                    android:textColor="#1C1B1F"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/view_all_orders_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:text="View all"
                    android:textColor="#6750A4"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:minHeight="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_orders_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                tools:listitem="@layout/item_order" />

        </LinearLayout>

        <!-- Recent Appointments Section -->
        <LinearLayout
            android:id="@+id/recent_appointments_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recent Appointments"
                    android:textColor="#1C1B1F"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/view_all_appointments_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:text="View all"
                    android:textColor="#6750A4"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:minHeight="48dp"
                    android:gravity="center" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_appointments_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                tools:listitem="@layout/item_order" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
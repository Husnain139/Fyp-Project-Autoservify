<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Notification permissions for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ui.main.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoServify"
        tools:replace="android:fullBackupContent"
        tools:targetApi="31">
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>


        <activity
            android:name=".ui.main.home.Profile.MyAccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.orders.CreateOrderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.orders.OrderDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.orders.AppointmentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.orders.AddAppointmentPartsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.orders.ManualOrderServiceActivity"
            android:exported="false" /> <!-- Shops -->
        <activity
            android:name=".ui.main.Shops.AddShopActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.Shops.ShopActivity"
            android:exported="false" /> <!-- Services -->
        <activity
            android:name=".ui.main.Shops.Services.Add_Service_Activity"
            android:exported="false" />
        <activity
            android:name=".ui.main.Shops.Services.Service_Detail_Activity"
            android:exported="false" />
        <activity
            android:name=".ui.main.Shops.Services.ServicesActivity"
            android:exported="false" /> <!-- Spare Parts -->
        <activity
            android:name=".ui.main.Shops.SpareParts.Addpartscraft"
            android:exported="false" />
        <activity
            android:name=".ui.main.Shops.SpareParts.Partscraftdetail"
            android:exported="false" />
        <activity
            android:name=".ui.main.Shops.SpareParts.PartsCraftActivity"
            android:exported="false" /> <!-- Cart / Orders -->
        <activity
            android:name=".ui.main.Cart.Add_To_Cart_Activity"
            android:exported="false" />
        <activity
            android:name=".ui.main.Cart.BookAppointment_Activity"
            android:exported="false" /> <!-- Auth -->
        <activity
            android:name=".ui.auth.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SignupOptionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SignupActivity"
            android:exported="false" /> <!-- Customer Activity -->
        <activity
            android:name=".ui.customer.CustomerMainActivity"
            android:exported="false" /> <!-- Shopkeeper Activity -->
        <activity
            android:name=".ui.shopkeeper.ShopkeeperMainActivity"
            android:exported="false" /> <!-- Shopkeeper Orders Activity -->
        <activity
            android:name=".ui.shopkeeper.OrdersActivity"
            android:exported="false" /> <!-- Shopkeeper Appointments Activity -->
        <activity
            android:name=".ui.shopkeeper.AppointmentsActivity"
            android:exported="false" /> <!-- Inventory Management -->
        <activity
            android:name=".ui.inventory.CheckStockActivity"
            android:exported="false" /> <!-- Main Activity (Splash/Redirect) -->
        <activity
            android:name=".ui.main.home.MainActivity"
            android:exported="false" /> <!-- Launcher -->

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
        </activity>

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".utils.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>